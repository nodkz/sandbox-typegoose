{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "src",
    "noEmit": false,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "lib": ["es2015", "esnext", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots" : ["./typings"],
    "types": ["jest"]
  },
  "include": [
    "**/typings.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "client"
  ]
}